/* components/toast.wxss */
.wx-toast-box{
  display: flex;
  width: 100%;
  justify-content: center;
  position: fixed;
  z-index: 999;
  bottom:240rpx;
  opacity: 0;
}
.wx-toast-content{
  max-width: 80%;
  border-radius:30rpx;
  padding: 20rpx 30rpx;
  background: rgba(0, 0, 0, 0.6);
}
.wx-toast-toast{
  height: 100%;
  width: 100%;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}