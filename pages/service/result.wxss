/* pages/service/result.wxss */
.result{
  width: 80%;
  margin: 45rpx 10%;
}
.result-info{
  background-color: #fff;
  border-radius: 10rpx;
}
.result-title{
  font-size: 32rpx;
  color: #FF5F00;
  text-align: center;
  padding-top: 60rpx;
  font-weight: 600;
}
.result-qrcode{
  width: 130px;
  height: 130px;
  margin: 55rpx auto 0;
  padding-bottom: 60rpx;
  /*  */
}
.order-info{
  border-top: 1px dashed #E1E1E1;
  padding: 45rpx 30rpx 0;
}
.order-info-item{
  height: 60rpx;
  line-height: 60rpx;
}
.result-btn{
  padding: 40rpx 40rpx 30rpx;
}
.result-bg-btn{
  width: 100%;
  height: 86rpx;
  background-color: #0271C3;
  border-radius: 12rpx;
  text-align: center;
  line-height: 86rpx;
  color: #fff;
}
.result-border-btn{
  width: 100%;
  height: 86rpx;
  border: 1px solid #0271C3;
  border-radius: 12rpx;
  text-align: center;
  line-height: 86rpx;
  color: #0271C3;
  margin-top: 30rpx;
}
.resukt-tip-img{
  height: 140rpx;
  width: 100%;
  margin: 60rpx 0 51rpx;
}