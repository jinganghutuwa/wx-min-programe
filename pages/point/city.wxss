/* pages/point/city.wxss */
.city-header{
  height: 90rpx;
  width: 100%;
  background-color: #fff;
  border-top: 1px solid #ededed;
  padding: 0 30rpx;
  line-height: 90rpx;
}
.city-header image{
  width: 30rpx;
  height: 30rpx;
  margin: 0 15rpx;
}
.city-header text{
  color: #999;
  font-size: 24rpx;
}
.city-item{
  font-size: 28rpx;
}
.city-item .city-item-province{
  padding: 0 30rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}
.city-item .city-item-city{
  padding: 0 30rpx;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
}