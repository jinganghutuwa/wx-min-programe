/* pages/point/list.wxss */
.point-city-list{
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  width: 100%;
  background-color: #fff;
  border-top: 1px solid #ededed;
  box-shadow:0px 10px 10px 0px rgba(0, 0, 0, 0.05);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1;
}
.point-city-img{
  width: 30rpx;
}
.point-city-check-img{
  width: 60rpx;
  position: absolute;
  right: 30rpx;
  top: 18rpx;
}
.shop-list{
  width: 100%;
  padding: 120rpx 30rpx 0;
}
.shop-item{
  width: 100%;
  box-shadow:0px 10rpx 20rpx 0px rgba(0, 0, 0, 0.05);
  border-radius:15rpx;
  background-color: #fff;
  padding: 30rpx 20rpx;
  overflow: hidden;
  color: #333;
  margin-bottom: 30rpx;
}
.shop-item-avator{
  display: block;
  width: 180rpx;
  margin-right: 20rpx;
}
.shop-item-name{
  width: 100%;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.shop-item-desc{
  width: 100%;
  font-size: 24rpx;
  color: #c7c7c7;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 15rpx;
}
.shop-item-info{
  width: 100%;
}
.shop-item-time{
  font-size: 24rpx;
  margin-bottom: 10rpx;
 
}
.shop-item-tel{
  font-size: 24rpx;
 
}
.shop-item-distance{
  font-size: 20rpx;
  color: #999999;
  text-align: center;
}
.shop-item-nav{
  width: 100rpx;
  height: 45rpx;
  background-color: #0271C3;
  overflow: hidden;
  color: #fff;
  text-align: center;
  line-height: 45rpx;
  font-size: 24rpx;
  border-radius: 23rpx;
  margin-top: 10rpx;
}
.point-map{
  position: fixed;
  top: 90rpx;
  bottom:0;
  left: 0;
  right: 0;
  z-index: 1
}
.point-map map{
  width: 100%;
  height: 100%;
}
.point-shop{
  position: fixed;
  z-index: 2;
  background-color: #fff;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
}
.point-shop-nav{
  width: 56rpx;
  height: 80rpx;
  display: block;
  margin-left: 20rpx;
}
.point-shop-name{
  font-size: 30rpx;
  width: 100%;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.point-shop-address{
  width: 100%;
  font-size: 28rpx;
  color: #666666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
}
.point-shop-tel{
  width: 100%;
  font-size: 28rpx;
  color: #666666;
}