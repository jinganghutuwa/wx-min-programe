/* pages/order/home.wxss */

.order-classify {
  margin-top: 2rpx;
  height: 88rpx;
  width: 100%;
  background-color: #fff;
}

.order-classify-item {
  width: 50%;
  text-align: center;
  overflow: hidden;
  height: 88rpx;
  line-height: 88rpx;
}

.order-classify-item.active {
  color: #0271c3;
  font-weight: bold;
  border-bottom: 5rpx solid #0271c3;
}

.order-list {
  padding: 0 30rpx 45rpx;
}

.order-item {
  width: 100%;
  background-color: #fff;
  margin-top: 30rpx;
  padding: 36rpx 30rpx 0;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}

.order-item-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.order-item-info {
  height: 50rpx;
  line-height: 50rpx;
}

.order-item-btn {
  margin: 20rpx -30rpx 0;
  border-top: 1px solid #f5f5f5;
  height: 86rpx;
}

.order-item .order-btn-item {
  color: #0271c3;
  width: 50%;
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
}

.order-item.used {
  color: #c7c7c7;
}

.order-item .order-btn-item.used {
  color: #c7c7c7;
}

.order-item-img {
  position: absolute;
  width: 143rpx;
  height: 92rpx;
  top: 0;
  right: 0;
}
.order-item-back{
  position: absolute;
  padding: 8rpx 20rpx;
  right: 30rpx;
  top: 35rpx;
  border: 1px solid #0271c3;
  font-size: 24rpx;
  color: #0271c3;
  border-radius: 10rpx;
}
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  animation: myfirst 0.5s;
  background-color: rgba(0, 0, 0, 0.5);
}

@keyframes myfirst {
  from {
    background-color: rgba(0, 0, 0, 0);
  }

  to {
    background-color: rgba(0, 0, 0, 0.5);
  }
}

.mask-content {
  width: 70%;
  background-color: #fff;
  padding: 80rpx 0 0;
  position: relative;
}
.mask-close-img{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 15rpx;
  right: 15rpx;
}
.result-qrcode {
  width: 150px;
  height: 150px;
  margin: 0 auto;
  /*  */
}

.order-matrix {
  margin-top: 30rpx;
  text-align: center;
  font-size: 30rpx;
}
.mask-content-tip{
  padding: 30rpx 15rpx 15rpx;
  font-size: 24rpx;
  color: #FF6521;
}
.order-close-btn{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  margin-top: 20rpx;
  border-top: 1px solid #D9D9D9;
  color: #FF5A5A;
  font-size: 32rpx;
}
